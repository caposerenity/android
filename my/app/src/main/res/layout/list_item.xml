<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingStart="?attr/xui_config_content_spacing_horizontal"
    android:paddingEnd="?attr/xui_config_content_spacing_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginStart="5dp"
            style="@style/TextStyle.Title"
            android:textSize="20sp"
            tools:text="主标题" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tag"
            style="@style/TextStyle.Title"
            android:background="@drawable/tag"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/xui_config_color_black"
            android:text="当当当已完成"
            android:textSize="12sp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_overdue"
            style="@style/TextStyle.Title"
            android:background="@drawable/bg_rect_round_tag_btn"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/xui_config_color_black"
            android:text="生产即将逾期"
            android:textSize="12sp"
            >
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_marginStart="1dp"
        style="@style/TextStyle.Explain"
        android:layout_marginTop="4dp"
        tools:text="副标题" />

</LinearLayout>